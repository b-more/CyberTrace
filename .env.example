# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key-in-production-min-32-chars
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://cybertrace_user:secure_password@localhost:5432/cybertrace_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=1800
WTF_CSRF_ENABLED=True
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=instance/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,docx,txt,csv,json,xlsx,zip
EVIDENCE_FOLDER=instance/evidence

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cybertrace.log
AUDIT_LOG_FILE=logs/audit.log
OSINT_LOG_FILE=logs/osint.log

# API Keys (Optional - Add as needed)
# Have I Been Pwned API
HIBP_API_KEY=

# Shodan API
SHODAN_API_KEY=

# VirusTotal API
VIRUSTOTAL_API_KEY=

# NumVerify API
NUMVERIFY_API_KEY=

# OpenCage Geocoder API
OPENCAGE_API_KEY=

# BlockCypher API
BLOCKCYPHER_API_KEY=

# Etherscan API
ETHERSCAN_API_KEY=

# DeHashed API (requires subscription)
DEHASHED_EMAIL=
DEHASHED_API_KEY=

# Intelligence X API (optional)
INTELX_API_KEY=

# Email Configuration (for notifications and 2FA)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=cybertrace@zambiapolice.gov.zm
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=cybertrace@zambiapolice.gov.zm

# Application Settings
APP_NAME=CyberTrace OSINT Platform
ORGANIZATION=Zambia Police Service
TIMEZONE=Africa/Lusaka
CASE_NUMBER_PREFIX=ZPS
CASE_NUMBER_YEAR_FORMAT=%Y

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=200 per day;50 per hour

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2
CACHE_DEFAULT_TIMEOUT=300

# Two-Factor Authentication
ENABLE_2FA=False
TOTP_ISSUER=CyberTrace ZPS

# Report Generation
REPORT_WATERMARK=CONFIDENTIAL - ZAMBIA POLICE SERVICE
REPORT_LOGO_PATH=app/static/img/zps_logo.png

# Data Retention Policy (in days)
CASE_ARCHIVE_AFTER_DAYS=2555
CASE_DELETE_AFTER_DAYS=3650
AUDIT_LOG_RETENTION_DAYS=2555

# External Tool Paths (if installed locally)
HOLEHE_PATH=/usr/local/bin/holehe
H8MAIL_PATH=/usr/local/bin/h8mail
SHERLOCK_PATH=/usr/local/bin/sherlock
THEHARVESTER_PATH=/usr/local/bin/theHarvester
SUBLIST3R_PATH=/usr/local/bin/sublist3r
PHONEINFOGA_PATH=/usr/local/bin/phoneinfoga
EXIFTOOL_PATH=/usr/bin/exiftool

# Feature Flags
ENABLE_EMAIL_OSINT=True
ENABLE_PHONE_OSINT=True
ENABLE_SOCIAL_MEDIA_OSINT=True
ENABLE_DOMAIN_IP_OSINT=True
ENABLE_BREACH_CHECKER=True
ENABLE_CRYPTO_TRACER=True
ENABLE_METADATA_EXTRACTOR=True
ENABLE_GEOLOCATION=True
ENABLE_ASYNC_TASKS=True
ENABLE_API_ACCESS=True

# Legal and Compliance
REQUIRE_WARRANT_INFO=True
ENABLE_AUDIT_LOGGING=True
DATA_SOVEREIGNTY_MODE=True
